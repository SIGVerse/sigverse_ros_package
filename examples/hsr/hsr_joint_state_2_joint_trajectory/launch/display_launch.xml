<?xml version="1.0" encoding="UTF-8"?>
<launch>
	<arg name="robot" default="hsrb4s" />

	<node pkg="joint_state_publisher_gui" exec="joint_state_publisher_gui">
		<remap from = "/joint_states" to = "/manual/joint_states"/>
	</node>

	<node pkg="robot_state_publisher" exec="robot_state_publisher">
		<param name="robot_description" value="$(command 'xacro $(find-pkg-share hsrb_description)/robots/$(var robot).urdf.xacro')" />
		<remap from = "/joint_states" to = "/manual/joint_states"/>
		<remap from = "/tf"           to = "/manual/tf"/>
	</node>

	<node pkg="rviz2" exec="rviz2" args="-d $(find-pkg-share hsrb_description)/launch/display.rviz">
		<remap from = "/tf" to = "/manual/tf"/>
	</node>
</launch>

